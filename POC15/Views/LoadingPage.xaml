<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:u="clr-namespace:POC15.Utilities"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             u:ViewModelLocator.AutoWireViewModel="True"
             x:Class="POC15.Views.LoadingPage">
    <ContentPage.Behaviors>
        <u:EventToCommandBehavior EventName="Appearing" Command="{Binding InitializeCommand}"/>
    </ContentPage.Behaviors>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator Color="Accent" IsRunning="True" IsVisible="True"/>
            <Label Text="Loading..."/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>